#!/usr/bin/env bash
# to fix the problem with need to make sure the container port is mapped to host port
CONTAINER=$(sudo docker ps --filter "publish=80" --format "{{.ID}}")
if [ "$CONTAINER" != "" ]; then
    sudo docker stop "$CONTAINER"
    sudo docker rm "$CONTAINER"
fi
sudo docker run -it --name ubuntu-nginx -p 80:80 ubuntu:latest /bin/bash
apt-get update
apt-get install -y nginx
