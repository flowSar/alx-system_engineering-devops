#!/usr/bin/env bash
# this script is for copying the public key to the server
# to the file authorized_keys
# and set the permission to the file read and write and
# execute on .ssh for owner and for read write permission for owner on file 
# authorized_keys 

sudo su - ubuntu

mkdir -p ~/.ssh
echo "ssh-rsa " >> ~/.ssh/authorized_keys

chmod 700 ~/.ssh
chmod 600 ~/.ssh/authorized_keys
